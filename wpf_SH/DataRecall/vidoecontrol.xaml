<UserControl x:Class="wpf_SH.DataRecall.vidoecontrol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpf_SH.DataRecall"
             BorderThickness="0"
             mc:Ignorable="d" Height="40" Width="495">
    <Grid  >
        <Border BorderBrush="#666666"  BorderThickness="2"  Background="#333237" CornerRadius="6,6,6,6"  Opacity="0.8">
            <StackPanel  Height="40"  >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="../images/nn-previous.png" Height="30"></Image>
                    <Image Source="../images/nn-play.png"  Height="30"  Mouse.PreviewMouseDown="Image_PreviewMouseDown"></Image>
                    <Image Source="../images/nn-next.png"  Height="30"></Image>
                </StackPanel>
                <ProgressBar Width="450" Height="4" Value="40"></ProgressBar>
            </StackPanel>
        </Border>
    
        
    </Grid>
</UserControl>
