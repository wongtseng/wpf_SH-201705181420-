<Window x:Class="wpf_SH.choose"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_SH"
        mc:Ignorable="d"
        Title="choose" Height="350" Width="300"
         ResizeMode="NoResize" WindowStartupLocation='Manual'
        ShowInTaskbar="False" WindowStyle="None"
            Background="#2d2c31"
        BorderBrush="#2279d6" 
        BorderThickness="1"
        >

    <Window.Resources>
        <ResourceDictionary Source="style.xaml"></ResourceDictionary>
    </Window.Resources>
  
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="261*"/>
            <RowDefinition Height="37*"/>
        </Grid.RowDefinitions>
        <local:UC_choose Grid.RowSpan="1"></local:UC_choose>
        <Button Grid.Row="1" HorizontalAlignment="Right" Width="60" Height="20" Margin="0,0,5,0" Content="确定" Click="Button_Click">
            
        </Button>
    </Grid>
</Window>
